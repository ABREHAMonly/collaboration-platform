    "db:setup": "bun scripts/setup-db.ts",
    "render:build": "bun run build && bun run db:setup"
  },
  "dependencies": {
    "express": "^4.18.2",
    "@apollo/server": "^4.9.5",
    "graphql": "^16.8.1",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "@google/generative-ai": "^0.2.1",
    "cookie-parser": "^1.4.6",
    "express-mongo-sanitize": "^2.2.0",
    "morgan": "^1.10.0",
    "graphql-ws": "^5.14.0",
    "ws": "^8.14.2",
    "graphql-subscriptions": "^2.0.0",
    "@graphql-tools/schema": "^9.0.19",
    "compression": "^1.7.4",
    "xss": "^1.0.14",
