    "@types/morgan": "^1.9.9",
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "@types/bun": "latest",
    "@types/ws": "^8.5.10",
    "@types/compression": "^1.7.5",
    "@types/express-rate-limit": "^5.1.3"
  }
